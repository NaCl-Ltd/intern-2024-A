<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
      <%= image_tag("ruby.png", id: "logo_icon", alt: "Ruby logo", width: "30px") %>
      <%= link_to "AAAA", root_path, id: "logo" %>
    </ul>
    <nav>
      <div class="navbar-header">
        <button id="hamburger" type="button" class="navbar-toggle collapsed">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
      <ul id="navbar-menu"
          class="nav navbar-nav navbar-right">
        <li><%= link_to "#{I18n.t'Home'}", root_path %></li>
        <li><%= link_to "#{I18n.t'Help'}", help_path %></li>
        <% if logged_in? %>
          <li><%= link_to "#{I18n.t'Users'}", users_path %></li>
          <li class="dropdown">
            <a href="#" id="account" class="dropdown-toggle">
              <%= I18n.t'Account'%> <b class="caret"></b>
            </a>
            <ul id="dropdown-menu" class="dropdown-menu">
              <li><%= link_to "#{I18n.t'Profile'}", current_user %></li>
              <li><%= link_to "#{I18n.t'Settings'}", edit_user_path(current_user) %></li>
              <li>
                <%= link_to "#{I18n.t'Log out'}", logout_path,
                                       data: { "turbo-method": :delete } %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "#{I18.t'Log in'}", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
