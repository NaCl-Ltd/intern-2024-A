<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <p>        
        <%= current_user.introduction %>
      </p>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3> t('Microposts') (<%= @user.microposts.order(created_at: :desc).count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <%= link_to "もっと見る", show_all_user_path(@user), class: 'btn btn-primary btn-custom-size' %>
    <% end %>
  </div>
</div>
